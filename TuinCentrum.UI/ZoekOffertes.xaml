<Window x:Class="TuinCentrum.UI.ZoekOffertes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuinCentrum.UI"
        mc:Ignorable="d"
        Title="ZoekOffertes" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Voer offerte ID in:" />
            <TextBox x:Name="offerteIdTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Zoek Offerte" Click="Button_Click_ZoekOfferte"/>
            <TextBlock x:Name="offerteDetailsTextBlock" Text="" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
